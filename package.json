{
  "name": "nestjs-fastify-monorepo",
  "version": "0.0.1",
  "description": "NestJS Fastify Monorepo",
  "author": "",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*",
    "tools"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api",
    "build:api": "cd apps/api && pnpm build",
    "build:auth": "cd apps/auth && pnpm build",
    "build:rspack": "BUILD=1 node node_modules/.pnpm/@rspack+cli@*/node_modules/@rspack/cli/bin/rspack.js build",
    "dev": "pnpm rspack:api",
    "rspack:api": "rspack serve -c rspack.config.api.js",
    "rspack:auth": "rspack serve -c rspack.config.auth.js",
    "dev:nest": "pnpm dev:api",
    "dev:api": "cd apps/api && pnpm start:dev",
    "dev:auth": "cd apps/auth && pnpm start:dev",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start api",
    "start:dev": "node node_modules/.pnpm/@rspack+cli@*/node_modules/@rspack/cli/bin/rspack.js serve",
    "start:debug": "nest start api --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/multipart": "^9.0.0",
    "@fastify/static": "^9.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "axios": "^1.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.4.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@rspack/cli": "^1.7.6",
    "@rspack/core": "^1.7.6",
    "@rspack/dev-server": "^1.2.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.0",
    "run-script-webpack-plugin": "^0.2.3",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
